{
  "name": "wersion",
  "description": "Makes bumping your monorepos workspaces version a breeze ðŸŒ¬ï¸.",
  "license": "MIT",
  "version": "0.3.2",
  "engines": {
    "node": ">=18"
  },
  "bin": "./dist/index.js",
  "scripts": {
    "build": "rm -Rf ./dist && rollup -c",
    "dev": "yarn build && cd ./examples/yarn-berry && wersion --dry-run",
    "dev:setup": "yarn build && npm link",
    "prepare": "husky install",
    "test:e2e:npm": "./scripts/test/npm.sh",
    "test:e2e:pnpm": "./scripts/test/pnpm.sh",
    "test:e2e:yarn1": "./scripts/test/yarn_classic.sh",
    "test:e2e:yarn2": "./scripts/test/yarn_berry.sh",
    "test:lint": "eslint .",
    "test:type": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.0",
    "@commitlint/config-conventional": "18.4.0",
    "@ivangabriele/commitlint-config": "1.1.0",
    "@ivangabriele/eslint-config-typescript-base": "7.1.1",
    "@ivangabriele/prettier-config": "4.0.1",
    "@ivangabriele/semantic-release-config-base": "3.0.3",
    "@ivangabriele/tsconfig-node": "1.2.2",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-json": "6.0.1",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@swc/core": "1.3.96",
    "@types/node": "20.9.0",
    "@types/semver": "7.5.5",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "chalk": "5.3.0",
    "commander": "11.1.0",
    "eslint": "8.53.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-sort-destructure-keys": "1.5.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "2.3.0",
    "esm-path": "1.0.1",
    "execa": "7.2.0",
    "fast-glob": "3.3.2",
    "husky": "8.0.3",
    "lint-staged": "13.3.0",
    "ora": "6.3.1",
    "pkg-up": "4.0.0",
    "prettier": "2.8.8",
    "rollup": "3.29.4",
    "rollup-plugin-add-shebang": "0.3.1",
    "rollup-plugin-swc3": "0.10.3",
    "semantic-release": "21.1.2",
    "semver": "7.5.4",
    "typescript": "5.2.2",
    "yaml": "2.3.4"
  },
  "//": "https://github.com/okonet/lint-staged/issues/825#issuecomment-674575655",
  "lint-staged": {
    "*.{json,md,yaml,yml}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --ext js,jsx,ts,tsx",
      "bash -c 'yarn test:type'"
    ]
  },
  "packageManager": "yarn@3.6.4",
  "prettier": "@ivangabriele/prettier-config",
  "release": {
    "extends": "@ivangabriele/semantic-release-config-base"
  },
  "author": {
    "name": "Ivan Gabriele",
