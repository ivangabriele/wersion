{
  "name": "wersion",
  "description": "Makes bumping your monorepos workspaces version a breeze 🌬️.",
  "license": "MIT",
  "version": "0.1.0",
  "engines": {
    "node": ">=18"
  },
  "bin": "./dist/index.js",
  "scripts": {
    "build": "rm -Rf ./dist && rollup -c",
    "dev": "yarn build && cd ./examples/yarn-berry && wersion --dry-run",
    "dev:setup": "yarn build && npm link",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-conventional": "17.6.6",
    "@ivangabriele/commitlint-config": "1.0.6",
    "@ivangabriele/eslint-config-typescript-base": "7.1.1",
    "@ivangabriele/prettier-config": "3.1.0",
    "@ivangabriele/tsconfig-node": "1.2.2",
    "@rollup/plugin-commonjs": "25.0.2",
    "@rollup/plugin-node-resolve": "15.1.0",
    "@swc/core": "1.3.67",
    "@types/node": "20.3.3",
    "@types/semver": "7.5.0",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "chalk": "5.3.0",
    "commander": "11.0.0",
    "eslint": "8.44.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.2",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-sort-destructure-keys": "1.5.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "2.3.0",
    "esm-path": "1.0.1",
    "execa": "7.1.1",
    "fast-glob": "3.3.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "pkg-up": "4.0.0",
    "prettier": "2.8.8",
    "rollup": "3.26.0",
    "rollup-plugin-add-shebang": "0.3.1",
    "rollup-plugin-swc3": "0.8.2",
    "semver": "7.5.3",
    "typescript": "5.1.6",
    "yaml": "2.3.1"
  },
  "//": "https://github.com/okonet/lint-staged/issues/825#issuecomment-674575655",
  "lint-staged": {
    "*.{json,md,yaml,yml}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --ext js,jsx,ts,tsx",
      "bash -c 'yarn test:type'"
    ]
  },
  "packageManager": "yarn@3.6.1",
  "prettier": "@ivangabriele/prettier-config",
  "author": {
    "name": "Ivan Gabriele",
    "email": "ivan.gabriele@gmail.com",
    "url": "https://www.ivangabriele.com"
  },
  "bugs": {
    "email": "ivan.gabriele@gmail.com",
    "url": "https://github.com/ivangabriele/wersion/issues"
  },
  "homepage": "https://github.com/ivangabriele/wersion#readme",
  "keywords": [
    "bump",
    "monorepo",
    "monorepository",
    "mono-repository",
    "npm",
    "version",
    "versionning",
    "workspaces",
    "yarn"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/ivangabriele/wersion"
}
